<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="test" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.AbstractEntity</class>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.AddressEnt</class>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.EquipmentEnt</class>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.RentEnt</class>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.users.AdminEnt</class>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.users.ClientEnt</class>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.users.EmployeeEnt</class>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.users.UserEnt</class>
        <class>pl.lodz.p.edu.adapter.repository.clients.data.users.UserTypeEnt</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:test"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>

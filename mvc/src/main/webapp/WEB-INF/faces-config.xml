<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <message-bundle>
            i18n.jsf_messages
        </message-bundle>
    </application>

    <navigation-rule>
        <navigation-case>
            <from-outcome>toManageClients</from-outcome>
            <to-view-id>/manageClients.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>toManageEmployees</from-outcome>
            <to-view-id>/manageEmployees.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>toManageAdmin</from-outcome>
            <to-view-id>/manageAdmins.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>toManageEquipment</from-outcome>
            <to-view-id>/manageEquipment.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/manageClients.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>toClient</from-outcome>
            <to-view-id>/editClient.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/editClient.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>fromClient</from-outcome>
            <to-view-id>/manageClients.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/manageEquipment.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>toEquipment</from-outcome>
            <to-view-id>/editEquipment.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>toCreateEquipment</from-outcome>
            <to-view-id>/createEquipment.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/editEquipment.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>fromEquipment</from-outcome>
            <to-view-id>/manageEquipment.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
